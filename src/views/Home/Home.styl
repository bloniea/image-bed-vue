.home {
  // height 100%
  .img-box {
    width 100%
    display flex
    flex-wrap wrap
    margin 0 auto
    justify-content center
    .img {
      // margin
      width 19%
      height 30rem
      margin 1rem (5% / 10)
      cursor pointer
      box-shadow 0.6rem 0.6rem 0.5rem #0000001f
      border 0.2rem solid #ffc0cb
      box-sizing border-box
      overflow hidden
      position relative
      .el-image {
        display block
        min-height 30rem
        width 100%
        height 100%
        :deep(.image-placeholder ) {
          width 100%
          height 100%
          background #fff
          .el-icon {
            font-size 4rem
            top 50%
            left 50%
            color pink
            transform translate(-50%, -50%)
            // margin-left -1.4rem
            // margin-top -1.4rem
            svg {
              animation loading 3s linear infinite
            }
          }
        }
        :deep(.image-error) {
          width 100%
          height 100%
          background #fff
          .el-icon {
            font-size 4rem
            top 50%
            left 50%
            color pink
            transform translate(-50%, -50%)
            // margin-left -1.4rem
            // margin-top -1.4rem
            svg {
              animation loading 3s linear infinite
            }
          }
        }
      }
      .img-name {
        position absolute
        left 0
        bottom 0
        right 0
        text-align center
        font-size 1.5rem
        color #fff
        font-weight bold
        background rgba(0, 0, 0, 0.2)
      }
      img {
        width 100%
        height 100%
        object-fit cover
        transition all 0.2s
        &:hover {
          transform scale(1.1, 1.1)
        }
      }
    }
  }
  .upload-img {
    .img-box {
      display flex
      justify-content center
      flex-wrap wrap
      .img-list {
        width 10rem
        // width 20%
        height 10rem
        margin 0.5rem
        position relative
        .el-image {
          width 100%
          height 100%
        }
        .layer {
          position absolute
          width 100%
          height 100%
          top 0
          left 0
          background rgba(0, 0, 0, 0.4)
          .uploading {
            position relative
            width 100%
            height 100%
            .el-icon {
              color #ffc0cb
              font-size 3rem
              top 50%
              left 50%
              // transform translate(-50%, -50%)
              margin-left -1.4rem
              margin-top -1.4rem
              position absolute
            }
            .load {
              color #fff
              // transition: transform 0.4s
              svg {
                animation loading 2s linear infinite
              }
            }
            .success {
              // font-size 2.8rem
            }
            .error {
              cursor pointer
            }
            .info {
              color #ff0000
              position absolute
              top 64%
              font-size 1rem
              width 100%
              text-align center
            }
          }
        }
      }
      .upload-btn {
        margin 0.5rem
        width 10rem
        height 10rem
        border 1px dashed #ccc
        // margin 0 auto
        position relative
        cursor pointer
        &:hover {
          border-color #ffc0cb
          .icon {
            color #ffc0cb
          }
        }
        .file {
          opacity 0
          width 100%
          height 100%
          z-index 9
        }
        .icon {
          position absolute
          top 50%
          left 50%
          transform translate(-50%, -50%)
          font-size 2rem
        }
      }
      .tip {
        font-size 1.1rem
        margin-top 1rem
        width 100%
        color #8b8b8b
      }
    }
    .submit-btn {
      text-align center
      margin-top 20px
      .el-button {
        font-size 1.7rem
      }
    }
  }
  @keyframes loading {
    0% {
      transform rotate(0deg)
    }
    50% {
      transform rotate(180deg)
    }
    100% {
      transform rotate(360deg)
    }
  }
  :deep(.el-dialog) {
    .el-dialog__title {
      font-size 1.7rem
    }
  }
  @media screen and (min-width 769px) {
    :deep(.el-overlay .el-dialog) {
      --el-dialog-width 70%
    }
  }
  @media screen and (max-width 1024px) {
    .img-box .img {
      width 32%
      margin 1rem (4% / 8)
    }
  }
  @media screen and (max-width 768px) {
    .img-box .img {
      width 48%
      margin 1rem (4% / 8)
    }
    :deep(.el-overlay .el-dialog) {
      --el-dialog-width 90%
    }
  }
  @media screen and (max-width 500px) {
    :deep(.image-detail) {
      .img-list {
        .img {
          height 20rem
          width 90%
          margin 1rem 0
        }
        .info .item > span {
          width 20rem
        }
      }
    }
    .img-box .img {
      width 94%
    }
  }
}
