.image-detail {
  .img-list {
    .img {
      width 90%
      margin 0 auto
      height 30rem
      .el-image {
        width 100%
        height 100%
      }
    }
    .info {
      width 90%
      margin 0 auto
      .item {
        display flex
        margin 1rem 0
        justify-content space-between
        span {
          width 12rem
          line-height 3.2rem
          font-size 1.3rem
        }
        .left {
          display flex
          justify-content space-around
          width 100%
          .el-input {
            font-size 1.3rem
          }
          .el-button {
            margin-left 0.5rem
            font-size 1.3rem
          }
        }
      }
      .operation {
        .input-error {
          --el-input-border-color red
        }
        .update-input {
          display flex
          box-sizing border-box
          width 100%
          margin-left 1.3rem
          .image-name {
            width 80%
          }
          .image-type {
            width 20%
            margin-left 0.5rem
          }
        }
        .update-edit {
          display flex
        }
      }
    }
    @media screen and (max-width 768px) {
      .info .item {
        flex-direction column
        span {
          display block
        }
      }
    }
  }
}
